.side__bar
  .user__name
    .user__box
      %p.name__box
        = current_user.name
      %ul.name
        %li.name__icon
          = link_to new_group_path do
            = icon('fa', 'edit', class:'icon')
        %li.name__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class:'icon')
  .group__list
    - current_user.groups.each do |group| 
      .group
        = link_to group_messages_path(group), class:"group__name" do
          = group.name
        %p.group__message
          = group.show_last_message